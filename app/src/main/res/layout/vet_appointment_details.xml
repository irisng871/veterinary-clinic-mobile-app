<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7dade">

    <TextView
        android:id="@+id/appointmentDetailsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#252E63"
        android:fontFamily="@font/yeseva_one"
        android:padding="15dp"
        android:text="Appointment Details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30px"
        android:layout_marginBottom="12dp"
        android:background="@drawable/left_chevron"
        android:baselineAligned="false"/>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/petAppointmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Id: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/appointmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="id"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Pet Id: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:text="pet id"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Name: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:text="name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Date: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="120dp"
            android:text="date"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Time: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="160dp"
            android:text="time"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Pet Owner: "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/petOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="200dp"
            android:text="pet owner"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp">

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:fontFamily="@font/yeseva_one"
            android:text="Reject"
            android:textSize="14sp" />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:backgroundTint="#00ff00"
            android:fontFamily="@font/yeseva_one"
            android:text="Accept"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>